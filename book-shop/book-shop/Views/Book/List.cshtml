@using BookShop.SRC.Models
@model IEnumerable<BSModBook>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" />
    <title>List</title>
</head>
<body>
    <h2>Все книги</h2>

    @{ 
        foreach(var book in Model)
        {
            <div>
                <h2>Название: @book.Title</h2>
                <h2>Цена: @book.Price.ToString("c")</h2>
            </div>
        }
    }

</body>
</html>

